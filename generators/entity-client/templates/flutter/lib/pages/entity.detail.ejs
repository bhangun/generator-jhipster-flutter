class <%= entityAngularName %>Detail extends StatelessWidget {
  final int id;
  final String username;
  <%= entityAngularName %> data;
  <%= entityAngularName %>Detail({@required this.id, @required this.username});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar(
          title: Text("<%= entityAngularName %> Detail"),
          elevation: 5.0, // Removing the drop shadow cast by the app bar.
        ),
        body: FutureBuilder(
